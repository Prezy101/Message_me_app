

<%= render 'layouts/menu' %>
<%= render 'layouts/messages' %>

<center>
  <h1>Welcome to the chatroom login page</h1>

  <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <%= form_for(:session, :html => {class: 'ui form', role: 'form'}, url: login_path) do |f| %>
            <div class="field">
              <%= f.label :username %>
              <div class="ui left icon input">
                <%= f.text_field :username, :class =>'form-control', :style =>'width: 50%;', :placeholder=>'Enter username' %>
                <i class="user icon"></i>
              </div>
            </div>

            <div class="field">
              <%= f.label :password %>
              <div class="ui left icon input">
                <%= f.password_field :password, :class =>'form-control', :style =>'width: 50%;', :placeholder=>'Enter password', :require=>'true' %>
                <i class="lock icon"></i>
              </div>
            </div>
            <p>
              <%= f.submit 'Login', :class => 'ui blue submit button', :style =>'width: 50%;' %>
            </p>
        <% end %>
      </div>
      <div class="middle aligned column">
        <div class="ui big button">
          <i class="signup icon"></i>
          Sign Up
        </div>
      </div>
    </div>
    <div class="ui vertical divider">
      Or
    </div>
  </div>

</center>



